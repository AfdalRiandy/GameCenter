<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_image"
            tools:src="@drawable/card_detail" />

        <!-- Detail Pemesanan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telah memesan ruangan"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                tools:text="Deskripsi pesanan" />

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. Harga"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="4dp"
                tools:text="Rp. 500.000" />

            <TextView
                android:id="@+id/orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 2 jam"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp"
                tools:text="2 jam" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari / tanggal"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp"
                tools:text="21 November 2024" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
